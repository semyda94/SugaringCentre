                    <div class="breadcrumb_iner_item">
                        <p>Shop/@Model.Product.Title</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--================Single Product Area =================-->

<div class="product_image_area section_padding">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-5">
                <div class="product_slider_img">
                    <div id="vertical">
                        @foreach (var productImage in Model.Product.ProductImage)
                        {
                            var image = Convert.ToBase64String(productImage.Image);
                            <div data-thumb="data:image/jpeg;base64,@image">
                                <img src="data:image/jpeg;base64,@image"/>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3>@Model.Product.Title</h3>
                    <h2>$@Model.Product.Price</h2>
                    <ul class="list">
                        <li>
                            <a class="active" href="#">
                                <span>Category</span> : Household
                            </a>
                        </li>
                        <li>
                            <a href="#"> <span>Availibility</span> : In Stock</a>
                        </li>
                    </ul>
                    <p>
                        @Model.Product.ShortDescription
                    </p>
                    <div class="card_area d-inline-block">
                        @using (Html.BeginForm("AddItemToCart", "Shop", FormMethod.Post))
                        {
                            <div class="product_count d-inline-block">
                                <input asp-for="Product.ProductId" value="@Model.Product.ProductId" hidden="hidden"/>
                                <span class="inumber-decrement">
                                    <i class="ti-minus"></i>
                                </span>
                                <input class="input-number" asp-for="Product.Qty" type="text" value="1" min="1" max="15">
                                <span class="number-increment">
                                    <i class="ti-plus"></i>
                                </span>
                            </div>
                            <div class="add_to_cart d-inline-block">
                                <button type="submit" class="btn_3">add to cart</button>
                                <a href="#" class="like_us">
                                    <i class="ti-heart"></i>
                                </a>
                            </div>
                        }
                        @* <div class="social_icon"> *@
                        @*     <a href="#" class="fb"> *@
                        @*         <i class="ti-facebook"></i> *@
                        @*     </a> *@
                        @*     <a href="#" class="tw"> *@
                        @*         <i class="ti-twitter-alt"></i> *@
                        @*     </a> *@
                        @*     <a href="#" class="li"> *@
                        @*         <i class="ti-linkedin"></i> *@
                        @*     </a> *@
                        @* </div> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
