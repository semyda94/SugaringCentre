<section class="product_list best_seller padding_bottom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>Best Sellers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var relatedProduct in @Model.RelatiedProducts)
            {
                var image = Convert.ToBase64String(relatedProduct.ProductImage.First().Image);
                <div class="col-lg-3 col-sm-6">
                    <div class="single_category_product">
                        <div class="single_category_img">
                            <img src="data:image/jpeg;base64,@image" alt="@relatedProduct.Title">
                            <div class="category_social_icon">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="ti-heart"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a onclick="AddItemToCartJson(@relatedProduct.ProductId)">
                                            <i class="ti-bag"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="category_product_text">
                                <a href='@Url.Action("SingleItem", new {productId = @relatedProduct.ProductId})'>
                                    <h5>@relatedProduct.Title</h5>
                                </a>
                                <p>$@relatedProduct.Price</p>
                            </div>
                        </div>
                    </div>
                </div>    
            }
        </div>
    </div>
</section>

