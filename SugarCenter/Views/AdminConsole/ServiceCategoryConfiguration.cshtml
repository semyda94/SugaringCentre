@model SugaringCentreAuckland.Persistent.SugaringCentreAucklandElk.Models.ServiceCategory

@{
    Layout = "_AdminConsole";
}

<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="main-card mb-3 card">
            <div class="card-body">
                @if (Model.ServiceCategoryId <= 0)
                {
                    <h5 class="card-title">New Services Category</h5>
                }
                else
                {
                    <h5 class="card-title">@Model.Title</h5>
                }
                <form class="needs-validation" novalidate asp-action="SaveServiceCategory" method="post" enctype="multipart/form-data" >
                    <input type="hidden" asp-for="ServiceCategoryId"/>

                    <div class="position-relative row form-group">
                        <label for="title" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input asp-for="Title" name="title" id="title" placeholder="Enter title" class="form-control" required="">
                            <div class="invalid-feedback">
                                Please provide a valid Category Title.
                            </div>
                        </div>
                    </div>

                    <div class="position-relative row form-group">
                        <label for="descInput" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" id="descInput" class="form-control" required=""></textarea>
                            <div class="invalid-feedback">
                                Please provide a valid Description.
                            </div>
                        </div>
                    </div>

                    <div class="position-relative row form-check">
                        <div class="col-sm-10 offset-sm-2">
                            <button class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>