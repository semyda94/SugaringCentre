@model IEnumerable<SugaringCentreAuckland.Persistent.SugaringCentreAucklandElk.Models.Staff>
@{
    Layout = "_AdminConsole";
}

<div class="app-main__outer">
    <div class="app-main__inner">
        
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-header">Active Staff</div>
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th>Title</th>
                                @* <th class="text-center">Description</th> *@
                                <th class="text-center">DOB</th>
                                <th class="text-center">Title</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var staff in Model)
                            {
                                <tr>
                                    <td class="text-center text-muted">#@staff.StaffId</td>
                                    <td>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left flex2">
                                                    <div class="widget-heading">@staff.FirstName @staff.LastName</div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (staff.Dob != null)
                                        {
                                            @staff.Dob.Value.ToShortDateString()
                                        }
                                    </td>
                                    <td class="text-center">@staff.Title</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-warning btn-sm" onclick='window.location = "@Url.Action("StaffConfiguration", "AdminConsole", new {staffId = staff.StaffId})";'>Edit</button>
                                        <button type="button" class="btn btn-danger btn-sm" onclick='window.location = "@Url.Action("DeleteStaff", "AdminConsole", new {staffId = staff.StaffId})";'>Delete</button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-block text-center card-footer">
                        <button class="btn-wide btn btn-success" onclick='window.location = "@Url.Action("StaffConfiguration", "AdminConsole")";'>New Staff Member</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>