@model IEnumerable<SugaringCentreAuckland.Persistent.SugaringCentreAucklandElk.Models.Service>
@{
    Layout = "_AdminConsole";
}
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-header">Active Services</div>
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th>Title</th>
                                @* <th class="text-center">Description</th> *@
                                <th>Price</th>
                                <th>Duration</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var service in Model)
                            {
                                <tr>
                                    <td class="text-center text-muted">#@service.ServiceId</td>
                                    <td>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left flex2">
                                                    <div class="widget-heading">@service.Title</div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@service.Price NZD</td>
                                    <td>@service.Duration min</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-warning btn-sm" onclick='window.location = "@Url.Action("ServiceConfiguration", "AdminConsole", new {serviceId = service.ServiceId})";'>Edit</button>
                                        <button type="button" class="btn btn-danger btn-sm" onclick='window.location = "@Url.Action("DeleteService", "AdminConsole", new {serviceId = service.ServiceId})";'>Delete</button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-block text-center card-footer">
                        <button class="btn-wide btn btn-success" onclick='window.location = "@Url.Action("ServiceConfiguration", "AdminConsole")";'>New Service</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>